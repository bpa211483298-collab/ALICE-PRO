{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Service Registry Schema",
  "type": "object",
  "required": ["version", "services"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the MCP registry format"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "category", "endpoint", "capabilities"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique identifier for the MCP service"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name of the service"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the service's purpose"
          },
          "category": {
            "type": "string",
            "enum": ["core", "ci_cd", "database", "storage", "debugging", "testing", "knowledge", "design", "communication"],
            "description": "Category of the service"
          },
          "endpoint": {
            "type": "string",
            "format": "uri",
            "description": "Base URL for the MCP service"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of capabilities provided by this service"
          },
          "auth": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["api_key", "oauth2", "ssh_key", "jwt"]
              },
              "env": {
                "type": "string",
                "description": "Environment variable containing the auth token"
              }
            }
          },
          "default_params": {
            "type": "object",
            "additionalProperties": true
          },
          "supported_languages": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "protocol": {
            "type": "string",
            "enum": ["http", "https", "ws", "wss"],
            "default": "http"
          },
          "access_control": {
            "type": "object",
            "properties": {
              "level": {
                "type": "string",
                "enum": ["public", "restricted", "admin"]
              }
            }
          }
        }
      }
    }
  }
}
