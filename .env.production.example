# DEEDS Production Environment
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME=DEEDS
APP_ENV=production
APP_DEBUG=false
APP_URL=http://deeds.local
APP_KEY=base64:YOUR_APP_KEY_HERE

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=deeds_production
DB_USERNAME=deeds_user
DB_PASSWORD=your_secure_password

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@deeds.local"
MAIL_FROM_NAME="${APP_NAME}"

# Security
APP_DEBUG=false
LOG_LEVEL=error
SESSION_SECURE_COOKIE=true

# Application Features
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
